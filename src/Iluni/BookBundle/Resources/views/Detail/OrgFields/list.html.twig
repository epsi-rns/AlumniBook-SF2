{% extends 'IluniBookBundle:List:table/simple.html.twig' %}

{% import 'IluniBookBundle:Common:macro/crud.html.twig' as crud %}
{% import 'IluniBookBundle:Common:macro/tab.html.twig' as tab %}

{% block title %}Business Fields by Organization{% endblock %}
{% block breadtitle %}Business Fields :: list{% endblock %}
{% block subtitle %}{{ organization }}{% endblock %}

{% block table_header %}
        {{ parent() }}
        <th>{% trans from 'forms' %}Action{% endtrans %}</th>
        <th>{% trans from 'forms' %}Business Field{% endtrans %}</th>
        <th>{% trans from 'forms' %}Product{% endtrans %}</th>
        <th>{% trans from 'forms' %}Description{% endtrans %}</th>
{% endblock %}

{% block table_row %}
        {{ parent() }}

        <td width="8%">
            {{ crud.link_to_actions_in_list(
                'ofields_show',
                'ofields_edit',
                { 'id': entity.id }
            ) }}
        </td>

        <td>{{ entity.bizField }}</td>
        <td>{{ entity.product }}</td>
        <td>{{ entity.description }}</td>
{% endblock %}

{% block table_links %}
    {{ crud.link_to_new_in_list('ofields_new', 'oid', 'oid') }}
{% endblock %}

{% block body %}
    {{ tab.tab('org', {
        'oid' : app.request.attributes.get('oid')
    }) }}

    {{ parent() }}
{% endblock %}
