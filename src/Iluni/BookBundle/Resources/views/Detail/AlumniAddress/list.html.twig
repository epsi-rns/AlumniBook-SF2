{% extends 'IluniBookBundle:List:table/simple.html.twig' %}

{% import 'IluniBookBundle:Common:macro/crud.html.twig' as crud %}
{% import 'IluniBookBundle:Common:macro/tab.html.twig' as tab %}

{% block title %}Home Addresses by Alumna/us{% endblock %}
{% block breadtitle %}Home Addresses :: list{% endblock %}
{% block subtitle %}{{ alumni }}{% endblock %}

{% block table_header %}
        {{ parent() }}
        <th>{% trans from 'forms' %}Action{% endtrans %}</th>
        <th>{% trans from 'forms' %}Address{% endtrans %}</th>
        <th>{% trans from 'forms' %}Region{% endtrans %}</th>
{% endblock %}

{% block table_row %}
        {{ parent() }}

        <td width="8%" class="action">
            {{ crud.link_to_actions_in_list(
                'residence_show',
                'residence_edit',
                { 'id': entity.id }
            ) }}
        </td>

        <td>{{ entity.address }}</td>
        <td>{{ entity.region }}</td>
{% endblock %}

{% block table_links %}
    {{ crud.link_to_new_in_list('residence_new', 'aid', 'aid') }}
{% endblock %}

{% block body %}
    {{ tab.tab('alumni', {
        'aid' : app.request.attributes.get('aid')
    }) }}

    {{ parent() }}
{% endblock %}


