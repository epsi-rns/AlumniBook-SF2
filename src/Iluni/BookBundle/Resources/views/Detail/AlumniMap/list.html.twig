{% extends 'IluniBookBundle:List:table/simple.html.twig' %}

{% import 'IluniBookBundle:Common:macro/crud.html.twig' as crud %}
{% import 'IluniBookBundle:Common:macro/tab.html.twig' as tab %}

{% block title %}Occupations by Alumna/us{% endblock %}
{% block breadtitle %}Occupations :: list{% endblock %}
{% block subtitle %}{{ alumni }}{% endblock %}

{% block table_header %}
        {{ parent() }}
        <th>{% trans from 'forms' %}Action{% endtrans %}</th>
        <th>{% trans from 'forms' %}Organization{% endtrans %}</th>
        <th>{% trans from 'forms' %}Department{% endtrans %}</th>
        <th>{% trans from 'forms' %}Job Type{% endtrans %}</th>
        <th>{% trans from 'forms' %}Job Position{% endtrans %}</th>
{% endblock %}

{% block table_row %}
        {{ parent() }}

        <td width="8%" class="action">
            {{ crud.link_to_actions_in_list(
                'amap_show',
                'amap_edit',
                { 'mid': entity.id }
            ) }}
        </td>

        <td>{{ entity.organization|textShort(20) }}</td>
        <td>{{ entity.department|textShort(20) }}</td>
        <td>{{ entity.jobType|textShort(20) }}</td>
        <td>{{ entity.jobPosition|textShort(20) }}</td>
{% endblock %}

{% block table_links %}
    {{ crud.link_to_new_in_list('amap_new', 'aid', 'aid') }}
{% endblock %}

{% block body %}
    {{ tab.tab('alumni', {
        'aid' : app.request.attributes.get('aid')
    }) }}

    {{ parent() }}
{% endblock %}


