{% macro form_delete(delete_form, path_delete, hash_argument) %}

    <form action="{{ path(path_delete, hash_argument) }}" method="post">
        {{ form_widget(delete_form) }}
        <button type="submit">{% trans from 'actions' %}Delete{% endtrans %}</button>
    </form>
{% endmacro %}


