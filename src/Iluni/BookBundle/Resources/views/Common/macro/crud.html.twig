{# IluniBookBundle:Common:macro/crud.html.twig #}


{% macro link_to_new(path_new, hash_argument) %}

    <a class = "icon_new no_ajax" href="{{
        path(path_new, hash_argument)
    }}">{% trans from 'actions' %}Create a new entry{% endtrans %}</a>
{% endmacro %}


{% macro link_to_new_in_list(path_new, id_name_route, id_name_get) %}

    <a class="icon_new ajax" href="{{ path(path_new,
        { (id_name_route): app.request.attributes.get(id_name_get) })
    }}">{% trans from 'actions' %}Create a new entry{% endtrans %}</a>
{% endmacro %}


{% macro link_to_edit(path_edit, hash_argument) %}
    {# unused #}
    <a class = "icon_edit" href="{{
        path(path_edit, hash_argument)
    }}">{% trans from 'actions' %}edit{% endtrans %}</a>
{% endmacro %}


{% macro link_to__edit(path_edit, hash_argument) %}

